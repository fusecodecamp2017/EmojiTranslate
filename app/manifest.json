{
  "manifest_version": 2,

  "name": "Emoji Translate",
  "description": "This extension replaces text in web pages with emojis",
  "version": "1.0",

  "browser_action": {
    "default_popup": "html/popup.html"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "js": [
        "js/content.js"
      ],
      "css": [
        "css/content.css"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": [
    "activeTab",
    "storage"
  ]
}